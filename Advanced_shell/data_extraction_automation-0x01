#!/bin/bash

# Extract data using jq
name=$(jq -r '.name' data.json)
raw_height=$(jq -r '.height' data.json)
raw_weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Format values exactly as required
formatted_height=$(awk -v h="$raw_height" 'BEGIN{printf "%.1f", h/10}')
formatted_weight=$(awk -v w="$raw_weight" 'BEGIN{printf "%d", w/10}')

# Capitalize first letters
capitalized_name=$(echo "$name" | awk '{print toupper(substr($0,1,1)) substr($0,2)}')
capitalized_type=$(echo "$type" | awk '{print toupper(substr($0,1,1)) substr($0,2)}')

# Output in EXACT required format - do not modify this line
echo "$capitalized_name is of type $capitalized_type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
