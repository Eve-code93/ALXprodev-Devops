#!/bin/bash

# Extract raw data using jq
name=$(jq -r '.name' data.json)
raw_height=$(jq -r '.height' data.json)
raw_weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert and format using awk
formatted_height=$(awk -v h="$raw_height" 'BEGIN{printf "%.1f", h/10}')
formatted_weight=$(awk -v w="$raw_weight" 'BEGIN{printf "%.0f", w/10}')

# Capitalize first letters using sed
capitalized_name=$(echo "$name" | sed 's/.*/\u&/')
capitalized_type=$(echo "$type" | sed 's/.*/\u&/')

# Output in exact required format
echo "$capitalized_name is of type $capitalized_type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."